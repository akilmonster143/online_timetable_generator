                                        <%= scheduleForHour.subject %>
                                            <% } %>
                        </td>
                        <% } %>
                </tr>

                <tr>
                    <td>Wednesday</td>
                    <% for (let i=1; i <=8; i++) { %>
                        <td>
                            <% let scheduleForHour=schedule.find((row)=> row.day === 'wednesday' && row.hour === i &&
                                row.faculty === facultyName) %>
