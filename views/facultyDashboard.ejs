<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Schedule of Cse</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <style>
      .navbar {
        background-color: #343a40;
      }
      .navbar-nav .nav-link {
        color: white;
      }
      .navbar .navbar-nav .nav-link {
        color: white;
      }

      .navbar-brand {
        color: aliceblue;
      }
      .navbar-nav .nav-link:hover {
        color: red;
      }
        /* Table styles */
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
            border: 3px solid #153557;
            border-radius: 40px;
            background-color: #f8f8f8;
          }

        th,
        td {
            text-align: center;
            padding: 8px;
            border: 1px solid #ddd;
        }

        th {
            background-color: #153557;
            color: white;
        }

        tr:nth-child(odd) {
            background-color: #fffbfb;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Home</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="timetable.html"
                >Timetable</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="faculty.html">Faculty Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="admin.html">Admin login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="class-teacher.html"
                >Class Teacher login</a
              >
            </li>
          </ul>
          <form class="d-flex" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
        </div>
      </div>
    </nav>

    <h1 style="text-align: center; font-size: 2.5rem; margin-bottom: 20px;">Welcome <%= facultyName %>
    </h1>

    <div style="display: flex; flex-direction: column; align-items: center;">
        <h2 style="font-size: 2rem; margin-bottom: 10px;"><u>Your Schedule </u></h2>

        <table>
            <thead>
                <tr>
                    <th>Day</th>
                    <th>8:40 - 9:30</th>
                    <th>9:30 - 10:20</th>
                    <th>10:20 - 11:10</th>
                    <th>11:10 - 12:00</th>
                    <th>12:50 - 1:40</th>
                    <th>1:40 - 2:30</th>
                    <th>2:30 - 3:20</th>
                    <th>3:20 - 4:10</th>
                </tr>
            </thead>
            <% console.log(schedule); %>
            <tbody>
                <tr>
                    <td>Monday</td>
                    <% for (let i=1; i <=8; i++) { %>
                        <td>
                            <% let scheduleForHour=schedule.find((row)=> row.day === 'monday' && row.hour === i &&
                                row.faculty === facultyName) %>
                                <% if (scheduleForHour) { %>
                                    <%= scheduleForHour.year + '-' + scheduleForHour.section %> <br>
                                        <%= scheduleForHour.subject %>
                                            <% } %>
                        </td>
                        <% } %>
                </tr>

                <tr>
                    <td>Tuesday</td>
                    <% for (let i=1; i <=8; i++) { %>
                        <td>
                            <% let scheduleForHour=schedule.find((row)=> row.day === 'tuesday' && row.hour === i &&
                                row.faculty === facultyName) %>
