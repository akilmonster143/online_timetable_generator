                                    <%= scheduleForHour.year + '-' + scheduleForHour.section %> <br>
                                        <%= scheduleForHour.subject %>
                                            <% } %>
                        </td>
                        <% } %>
                </tr>
                <tr>
                    <td>Friday</td>
                    <% for (let i=1; i <=8; i++) { %>
                        <td>
                            <% let scheduleForHour=schedule.find((row)=> row.day === 'friday' && row.hour === i &&
                                row.faculty === facultyName) %>
