                        <% } %>
                </tr>

                <tr>
                    <td>Thursday</td>
                    <% for (let i=1; i <=8; i++) { %>
                        <td>
                            <% let scheduleForHour=schedule.find((row)=> row.day === 'thursday' && row.hour === i &&
                                row.faculty === facultyName) %>
